{
	"name": "shalldn",
	"displayName": "Shalldn",
	"description": "Shalldn requirements language support",
	"author": "Vladimir Avdonin",
	"license": "MIT",
	"version": "0.0.3",
	"repository": {
		"type": "git",
		"url": "https://github.com/vldmr-bus/shalldn"
	},
	"bugs": {
		"url": "https://github.com/vldmr-bus/shalldn/issues"
	},
	"icon": "image/Shalldn.png",
	"publisher": "vldmr-bus",
	"categories": [
		"Programming Languages",
		"Linters",
		"Debuggers"
	],
	"tags": [
		"requirements",
		"design",
		"traceablity",
		"coverage"
	],
	"preview": true,
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"*"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "shalldn",
				"extensions": [
					".shalldn"
				],
				"aliases": [
					"Shalldn"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"commands": [
			{
				"command": "shalldn.toggleErrWarn",
				"title": "Toggle showing errors as warnings",
				"category": "Shalldn"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Shalldn configuration",
			"properties": {
				"shalldnLanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"shalldnLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "ts-node ./client/tests/support/cli-runner/runTest",
		"clean": "del-cli --force ./client/out && del-cli --force ./server/out && del-cli --force ./server/src/antlr"
	},
	"devDependencies": {
		"@cucumber/cucumber": "^8.0.0-rc.1",
		"@types/mocha": "^8.2.2",
		"@types/node": "^16.11.9",
		"@typescript-eslint/eslint-plugin": "^4.23.0",
		"@typescript-eslint/parser": "^4.23.0",
		"del-cli": "^4.0.1",
		"eslint": "^7.26.0",
		"mocha": "^8.3.2",
		"ts-node": "^10.4.0",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"ignore": "^5.1.9",
		"rxjs": "^7.4.0",
		"vscode-uri": "^3.0.2"
	}
}
